<%= render partial: "static_pages/navbar" %>
<div class="container" style="padding-top: 50px">
	<div class="col-lg-4">
		<%= form_for(:session, url: login_chat_path) do |f| %>
			<%= hidden_field_tag 'chat_room_id', @chat_room %>
			<div class="form-group">
				<%= f.label :password %>
				<%= f.password_field :password, class: 'form-control' %>
			</div>

			<%= f.submit "Join", class: "btn btn-success btn-block" %>
		<% end %>
	</div>
</div>
